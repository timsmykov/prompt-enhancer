{
  "manifest_version": 3,
  "name": "Prompt Enhancer",
  "version": "1.0.0",
  "description": "Enhance your AI chatbot prompts with one click",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://grok.x.ai/*",
    "*://claude.ai/*",
    "*://bard.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://grok.x.ai/*",
        "*://claude.ai/*",
        "*://bard.google.com/*"
      ],
      "js": ["content.js"],
      "css": []
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prompt Enhancer Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
